<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
                layout="absolute"
                horizontalScrollPolicy="off"
                verticalScrollPolicy="off"
                backgroundAlpha="0"
                width="260" height="80"
                initialize="init()"
        >

    <mx:Style>
        .hTip {
            backgroundAlpha: 1.0;
            backgroundColor: white;
            color: #333333;
            fontWeight: bold;
        }
    </mx:Style>

    <mx:Script source="ModPL.mxml.as"/>

    <!--TÅ‚o-->
    <mx:Image source="@Embed(source='gfx/radioBackground.png')"
              x="0" y="0"/>

    <!--Klawisze PLAY/STOP - kontrolki-->
    <mx:Image id="btnPlay"
              source="@Embed(source='gfx/btnPlay.png')"
              x="6" y="6"
              mouseDown="play()"
              rollOverEffect="{effOver}"
              rollOutEffect="{effOut}"/>

    <mx:Image id="btnStop"
              source="@Embed(source='gfx/btnStop.png')"
              x="40" y="6"
              mouseDown="stop()"
              rollOverEffect="{effOver}"
              rollOutEffect="{effOut}"/>

    <mx:Image id="imgModules"
              source="@Embed(source='gfx/logo.png')"
              x="6" y="39"
              mouseDown="logo()"
              rollOverEffect="{effOver}"
              rollOutEffect="{effOut}"/>

    <mx:Text id="txtHeader"
             x="80" y="4"
             width="176"
             fontWeight="bold"
             textAlign="center"
             text="-- modules.pl --" />

    <mx:Text id="txtContent"
             x="80" y="20"
             width="176"
             textAlign="center"
             text="100% tracked music" />

    <mx:HSlider id="volumeSlider"
                x="80" y="35"
                width="176"
                minimum="0" maximum="100"
                value="50"
                dataTipPrecision="0"
                dataTipStyleName="hTip"
                invertThumbDirection="true"
                showTrackHighlight="true"
                liveDragging="true"
                change="updateVolume()"/>

    <mx:Text id="txtFooter"
             x="0" y="60"
             text="by Grzegorz Gajos, based on Christian Corti 'FLOD'"
             fontSize="9"
             textAlign="center"
             width="260"
             color="#aaaaaa"
            />

    <!--Klawisze PLAY/STOP - efekty-->
    <mx:Glow id="effOver"
             alphaFrom="0"
             alphaTo="0.5"
             blurXFrom="0"
             blurYFrom="0"
             blurXTo="2"
             blurYTo="22"
             color="white"
             inner="true"
             strength="2"
            />

    <mx:Glow id="effOut"
             alphaFrom="0.5"
             alphaTo="0"
             blurXFrom="2"
             blurYFrom="22"
             blurXTo="0"
             blurYTo="0"
             color="white"
             inner="true"
             strength="2"
            />

</mx:Application>